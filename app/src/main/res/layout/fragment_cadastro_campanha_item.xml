<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cadastroCampanhaItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">

        <TextView
            android:id="@+id/cadastroCampanhaItemLabelNovoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Item"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/cadastroCampanhaItemClose"
            app:layout_constraintEnd_toStartOf="@+id/cadastroCampanhaItemClose"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cadastroCampanhaItemClose" />

        <ImageButton
            android:id="@+id/cadastroCampanhaItemClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:contentDescription="@string/fechar_a_tela_de_adicao_de_itens"
            android:tint="@color/corBotaoCancelar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_close_24" />

        <ImageButton
            android:id="@+id/cadastroCampanhaItemConfirma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@null"
            android:contentDescription="@string/content_description_imageButton_cardFinalizaCampanha"
            android:src="@drawable/ic_baseline_done_30"
            android:tint="@color/corBotaoConfirmar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaItemQuantidade" />

        <EditText
            android:id="@+id/cadastroCampanhaItemQuantidade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="@string/digite_a_quantidade_do_item"
            android:inputType="textPersonName"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cadastroCampanhaItemLabelQuantidade"
            app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaItemUnidadesMedida" />

        <TextView
            android:id="@+id/cadastroCampanhaItemLabelQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/textCadastroCampanhaLabelQuantidade"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/cadastroCampanhaItemQuantidade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cadastroCampanhaItemQuantidade" />

        <TextView
            android:id="@+id/cadastroCampanhaItemLabelUnidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/textCadastroCampanhaLabelUnidade"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/cadastroCampanhaItemUnidadesMedida"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cadastroCampanhaItemUnidadesMedida" />

        <TextView
            android:id="@+id/cadastroCampanhaItemLabelNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/textCadastroCampanhaLabelNome"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/cadastroCampanhaItemNome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cadastroCampanhaItemNome" />

        <EditText
            android:id="@+id/cadastroCampanhaItemNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="@string/hintCadastroCampanhaEditTextNomeItem"
            android:inputType="textPersonName"
            android:textColorHint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cadastroCampanhaItemLabelNome"
            app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaItemClose" />

        <Spinner
            android:id="@+id/cadastroCampanhaItemUnidadesMedida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:entries="@array/unidades_medida"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cadastroCampanhaItemLabelUnidade"
            app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaItemNome" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>