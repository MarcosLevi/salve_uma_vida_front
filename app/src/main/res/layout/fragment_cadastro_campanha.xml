<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/cadastroCampanhaFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".fragments.CadastroCampanhaFragment">

        <ScrollView
            android:id="@+id/cadastroCampanhaScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/cadastroCampanhaErros"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum"
                        android:textColor="@color/design_default_color_error"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaImagem" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cadastroCampanhaTituloLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="8dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:counterEnabled="true"
                        app:counterMaxLength="255"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaErros">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/cadastroCampanhaTitulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Título"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:nextFocusRight="@id/cadastroCampanhaPickDate" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/cadastroCampanhaPickDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@null"
                        android:contentDescription="@string/selecione_uma_data"
                        android:nextFocusForward="@+id/cadastroCampanhaDescricao"
                        android:tint="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/cadastroCampanhaDataLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/cadastroCampanhaDataLayout"
                        app:srcCompat="@drawable/ic_baseline_date_range_24" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cadastroCampanhaDataLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:layout_constraintEnd_toStartOf="@+id/cadastroCampanhaPickDate"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaTituloLayout">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/cadastroCampanhaData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="Data"
                            android:inputType="date" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cadastroCampanhaDescricaoLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:counterEnabled="true"
                        app:counterMaxLength="255"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaDataLayout">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/cadastroCampanhaDescricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Descrição"
                            android:imeOptions="actionNext"
                            android:inputType="textMultiLine"
                            android:scrollbars="vertical" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/cadastroCampanhaFinalizar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:contentDescription="@string/content_description_imageButton_cardFinalizaCampanha"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:src="@drawable/ic_baseline_done_30"
                        android:tint="@color/corBotaoConfirmar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@+id/cadastroCampanhaAdicionaItem"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaQuantidadeDeItens"
                        app:layout_constraintVertical_bias="0.0">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cadastroCampanhaitensCampanhaOng"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/cadastroCampanhaAdicionaItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:contentDescription="@string/content_description_imageButton_cardAddItem"
                        android:src="@drawable/ic_baseline_add_box_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/cadastroCampanhaFinalizar" />

                    <TextView
                        android:id="@+id/cadastroCampanhaQuantidadeDeItens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="@string/text_cardQuantidadeItens"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cadastroCampanhaDescricaoLayout" />

                    <ImageView
                        android:id="@+id/cadastroCampanhaImagem"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/imagem_da_campanha"
                        android:scaleType="fitXY"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_dafault_photo" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</layout>