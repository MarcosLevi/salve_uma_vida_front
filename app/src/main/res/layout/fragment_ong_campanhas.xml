<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundFragments"
        tools:context=".fragments.CampanhasFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cardsCampanhas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/ongCampanhasFragmentFabAddEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="invisible"
                app:backgroundTint="@color/corFabAddEventos"
                app:layout_constraintBottom_toTopOf="@+id/ongCampanhasFragmentFabAddCampanha"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_baseline_event_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/ongCampanhasFragmentFabAddCampanha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="invisible"
                app:backgroundTint="@color/corFabAddCampanhas"
                app:layout_constraintBottom_toTopOf="@+id/ongCampanhasFragmentAdd"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_baseline_campaign_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/ongCampanhasFragmentAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/corFabNeutro"
                android:src="@drawable/ic_baseline_add_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/ongCampanhasFragmentLabelEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Evento"
                android:textColor="@color/corFabNeutro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/ongCampanhasFragmentFabAddEvento"
                app:layout_constraintEnd_toStartOf="@+id/ongCampanhasFragmentFabAddEvento"
                app:layout_constraintTop_toTopOf="@+id/ongCampanhasFragmentFabAddEvento" />

            <TextView
                android:id="@+id/ongCampanhasFragmentLabelCampanha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Campanha"
                android:textColor="@color/corFabNeutro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/ongCampanhasFragmentFabAddCampanha"
                app:layout_constraintEnd_toStartOf="@+id/ongCampanhasFragmentFabAddCampanha"
                app:layout_constraintTop_toTopOf="@+id/ongCampanhasFragmentFabAddCampanha" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>