<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/corCampanhas"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/cardOngFavoritaBotaoFavorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_star_border_24" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardOngFavoritaCardView"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/corCampanhas"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/cardOngFavoritaImagem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/content_description_imageView_cardImagemCampanha"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_dafault_photo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cardOngFavoritaNome"
                style="@style/Titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="CÃ£ozinho feliz"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/cardOngFavoritaBotaoFavorito"
                app:layout_constraintStart_toEndOf="@+id/cardOngFavoritaCardView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardOngFavoritaCampanhasAbertas"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:text="Campanhas Abertas"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/cardOngFavoritaNumeroCampanhasAbertas"
                app:layout_constraintEnd_toEndOf="@+id/cardOngFavoritaNome"
                app:layout_constraintStart_toEndOf="@+id/cardOngFavoritaNumeroCampanhasAbertas"
                app:layout_constraintTop_toTopOf="@+id/cardOngFavoritaNumeroCampanhasAbertas" />

            <TextView
                android:id="@+id/cardOngFavoritaNumeroCampanhasAbertas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/cardOngFavoritaNome"
                app:layout_constraintTop_toBottomOf="@+id/cardOngFavoritaNome" />

            <TextView
                android:id="@+id/cardOngFavoritaNumeroEventosAbertos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cardOngFavoritaNome"
                app:layout_constraintTop_toBottomOf="@+id/cardOngFavoritaNumeroCampanhasAbertas"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/cardOngFavoritaEventosAbertos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Eventos Abertos"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/cardOngFavoritaNumeroEventosAbertos"
                app:layout_constraintEnd_toEndOf="@+id/cardOngFavoritaNome"
                app:layout_constraintStart_toEndOf="@+id/cardOngFavoritaNumeroEventosAbertos"
                app:layout_constraintTop_toTopOf="@+id/cardOngFavoritaNumeroEventosAbertos" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>