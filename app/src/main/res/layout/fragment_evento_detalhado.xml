<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/corEventos"
        app:layoutDescription="@xml/fragment_evento_detalhado_scene"
        tools:context=".fragments.EventoDetalhadoFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/eventoDetalhadoHeader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/eventoDetalhadoCardLoading"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:elevation="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/eventoDetalhadoCard"
                app:layout_constraintEnd_toEndOf="@+id/eventoDetalhadoCard"
                app:layout_constraintStart_toStartOf="@+id/eventoDetalhadoCard"
                app:layout_constraintTop_toTopOf="@+id/eventoDetalhadoCard">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/eventoDetalhadoTituloLoading"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:elevation="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/eventoDetalhadoTitulo"
                app:layout_constraintEnd_toEndOf="@+id/eventoDetalhadoTitulo"
                app:layout_constraintStart_toStartOf="@+id/eventoDetalhadoTitulo"
                app:layout_constraintTop_toTopOf="@id/eventoDetalhadoTitulo">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/eventoDetalhadoDataLoading"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:elevation="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/eventoDetalhadoData"
                app:layout_constraintEnd_toEndOf="@+id/eventoDetalhadoData"
                app:layout_constraintStart_toStartOf="@+id/eventoDetalhadoData"
                app:layout_constraintTop_toTopOf="@+id/eventoDetalhadoData">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/eventoDetalhadoDescricaoLabelLoading"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:elevation="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/eventoDetalhadoDescricaoLabel"
                app:layout_constraintEnd_toEndOf="@+id/eventoDetalhadoDescricaoLabel"
                app:layout_constraintStart_toStartOf="@+id/eventoDetalhadoCard"
                app:layout_constraintTop_toTopOf="@+id/eventoDetalhadoDescricaoLabel">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/eventoDetalhadoDescricaoLoading"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:elevation="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/eventoDetalhadoDescricao"
                app:layout_constraintEnd_toEndOf="@+id/eventoDetalhadoDescricao"
                app:layout_constraintStart_toStartOf="@+id/eventoDetalhadoDescricao"
                app:layout_constraintTop_toTopOf="@+id/eventoDetalhadoDescricao">

            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/eventoDetalhadoCard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:backgroundTint="@color/corEventos"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/eventoDetalhadoImagem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_dafault_photo" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/eventoDetalhadoTitulo"
                style="@style/Titulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Titulo do evento"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventoDetalhadoCard" />

            <TextView
                android:id="@+id/eventoDetalhadoData"
                style="@style/Subtitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Data do evento"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventoDetalhadoTitulo" />

            <TextView
                android:id="@+id/eventoDetalhadoDescricaoLabel"
                style="@style/Texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Descrição"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventoDetalhadoData" />

            <TextView
                android:id="@+id/eventoDetalhadoDescricao"
                style="@style/Texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/lore_ipsum"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventoDetalhadoDescricaoLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/eventoDetalhadoConteudo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventoDetalhadoHeader">

            <FrameLayout
                android:id="@+id/eventoDetalhadoEnderecoLabelLoading"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:elevation="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/eventoDetalhadoEnderecoLabel"
                app:layout_constraintEnd_toEndOf="@id/eventoDetalhadoEnderecoLabel"
                app:layout_constraintStart_toStartOf="@id/eventoDetalhadoEnderecoLabel"
                app:layout_constraintTop_toTopOf="@id/eventoDetalhadoEnderecoLabel">

            </FrameLayout>

            <FrameLayout
                android:id="@+id/eventoDetalhadoEnderecoLoading"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:elevation="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/eventoDetalhadoEndereco"
                app:layout_constraintEnd_toEndOf="@+id/eventoDetalhadoEndereco"
                app:layout_constraintStart_toStartOf="@+id/eventoDetalhadoEndereco"
                app:layout_constraintTop_toTopOf="@+id/eventoDetalhadoEndereco">

            </FrameLayout>

            <br.com.salve_uma_vida_front.models.CustomMapView
                android:id="@+id/eventoDetalhadoMap"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventoDetalhadoEndereco" />

            <TextView
                android:id="@+id/eventoDetalhadoEnderecoLabel"
                style="@style/Texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/eventoDetalhadoEndereco"
                style="@style/Texto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Endereço do evento"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventoDetalhadoEnderecoLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>